<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tvTitleDrugName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="药品名称："
                android:textSize="20dp"
                android:padding="8dp"
                android:textColor="@android:color/black"
        />

        <EditText
                android:background="@android:color/white"
                android:id="@+id/edtDrugName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="请输入药品名称"
                android:text=""
                android:textSize="20dp"
                android:padding="8dp"
                android:textColor="@android:color/black"
                app:layout_constraintLeft_toRightOf="@id/tvTitleDrugName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <android.support.constraint.ConstraintLayout
                android:id="@+id/clTitleDrugPiece"
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/edtDrugName"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tvTitleDrugPiece"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每次用量："
                    android:textSize="18dp"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            <Spinner
                    android:id="@+id/spnDrugPiece"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/pieces"
                    android:textSize="20dp"
                    android:spinnerMode="dialog"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    app:layout_constraintLeft_toRightOf="@id/tvTitleDrugPiece"
                    app:layout_constraintTop_toTopOf="@id/tvTitleDrugPiece"
                    app:layout_constraintBottom_toBottomOf="@id/tvTitleDrugPiece"/>

            <TextView
                    android:id="@+id/tvTitleDrugUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单位："
                    android:textSize="18dp"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    app:layout_constraintLeft_toRightOf="@id/spnDrugPiece"
            />

            <Spinner
                    android:id="@+id/spnDrugUnit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/units"
                    android:textSize="20dp"
                    android:spinnerMode="dialog"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    app:layout_constraintLeft_toRightOf="@id/tvTitleDrugUnit"
                    app:layout_constraintTop_toTopOf="@id/tvTitleDrugUnit"
                    app:layout_constraintBottom_toBottomOf="@id/tvTitleDrugUnit"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/clNotice"
                android:background="@android:color/white"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/clTitleDrugPiece"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tvTitleNotice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注意事项："
                    android:textSize="18dp"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            <Spinner
                    android:id="@+id/spnNotice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/notices"
                    android:textSize="20dp"
                    android:spinnerMode="dialog"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    app:layout_constraintLeft_toRightOf="@id/tvTitleNotice"
                    app:layout_constraintTop_toTopOf="@id/tvTitleNotice"
                    app:layout_constraintBottom_toBottomOf="@id/tvTitleNotice"/>

            <EditText
                    android:id="@+id/edtNotice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入注意事项"
                    android:text=""
                    android:textSize="20dp"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    app:layout_constraintLeft_toRightOf="@id/tvTitleNotice"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/spnNotice"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_marginTop="2dp"
                android:paddingBottom="30dp"
                app:layout_constraintTop_toBottomOf="@id/clNotice"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvTitleTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="服药间隔设置："
                    android:textSize="18dp"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvTime"
                    android:layout_width="match_parent"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:nestedScrollingEnabled="true"
                    app:layout_constraintTop_toBottomOf="@id/tvTitleTime"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/btnAddOne"
                    app:layout_constraintTop_toBottomOf="@id/rvTime"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:textSize="20dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintRight_toLeftOf="@+id/btnSetAlarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="增加次数"/>

            <Button
                    android:id="@+id/btnSetAlarm"
                    app:layout_constraintTop_toBottomOf="@id/rvTime"
                    app:layout_constraintLeft_toRightOf="@id/btnAddOne"
                    android:background="@color/colorAccent"
                    android:textColor="@android:color/white"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:textSize="20dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置提醒闹钟"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>