<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tvIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第1次"
            android:textSize="20dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            app:layout_constraintRight_toLeftOf="@+id/tvTime"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:00"
            android:textSize="20dp"
            android:padding="8dp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintLeft_toRightOf="@id/tvIndex"
            app:layout_constraintRight_toLeftOf="@+id/switchOn"
            app:layout_constraintTop_toTopOf="parent"/>

    <Switch
            android:id="@+id/switchOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_marginRight="8dp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintLeft_toRightOf="@id/tvTime"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>